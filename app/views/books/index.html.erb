<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Books</h1>

  <ul class="list bg-base-100 rounded-box shadow-xl">
    <% @books.each do |book| %>
      <li>
        <%= link_to book_path(book), class: "list-row hover:bg-base-200 transition-colors" do %>
          <div class="list-col-grow flex items-center gap-4">
            <div class="avatar">
              <div class="w-16 h-20 rounded">
                <% if book.cover_image.attached? %>
                  <%= image_tag book.cover_image, alt: book.title, class: "object-cover" %>
                <% else %>
                  <div class="bg-base-300 h-full w-full flex items-center justify-center">
                    <span class="text-xs text-base-content/50">No cover</span>
                  </div>
                <% end %>
              </div>
            </div>
            <div>
              <div class="font-bold"><%= book.title %></div>
              <div class="text-sm text-base-content/70">by <%= book.author.name %></div>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
